<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    tools:layout_editor_absoluteX="-16dp"
    tools:layout_editor_absoluteY="195dp">

    <EditText
        android:id="@+id/user_register_mail_et"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:inputType="textEmailAddress"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_register_mail_title_tv"
        app:layout_constraintStart_toStartOf="@+id/user_register_phone_et" />

    <EditText
        android:id="@+id/user_register_password_et"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:inputType="textPassword"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_register_password_title_tv"
        app:layout_constraintStart_toStartOf="@+id/user_register_mail_et" />

    <EditText
        android:id="@+id/user_register_phone_et"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:inputType="phone"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_register_phone_title_tv"
        app:layout_constraintStart_toStartOf="@+id/user_register_age_et" />

    <EditText
        android:id="@+id/user_register_age_et"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_register_age_title_tv"
        app:layout_constraintStart_toStartOf="@+id/user_register_name_et" />

    <TextView
        android:id="@+id/user_register_mail_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Mail:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_register_phone_title_tv" />

    <TextView
        android:id="@+id/user_register_password_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Password:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/user_register_mail_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/user_register_mail_title_tv" />

    <TextView
        android:id="@+id/user_register_age_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Age:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_register_name_title_tv"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/user_register_avatar"
        android:layout_width="239dp"
        android:layout_height="178dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/userimage" />

    <TextView
        android:id="@+id/user_register_name_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="Name:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_register_avatar" />

    <Button
        android:id="@+id/user_register_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/orange_button"
        android:text="REGISTER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/user_register_phone_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Phone:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_register_age_title_tv" />

    <EditText
        android:id="@+id/user_register_name_et"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_register_name_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.679"
        app:layout_constraintStart_toEndOf="@+id/user_register_name_title_tv" />

    <ImageButton
        android:id="@+id/user_register_camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/user_register_gallery_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219" />

    <ImageButton
        android:id="@+id/user_register_gallery_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_image_search_small"
        app:layout_constraintBottom_toTopOf="@+id/user_register_camera_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>